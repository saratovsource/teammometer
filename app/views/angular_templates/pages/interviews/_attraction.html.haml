.panel-heading
  %p {{ survey.attractionQuestion }}
.panel-body.row
  .col-md-6
    %ul.list-group
      %li.list-group-item(ng-repeat="respondent in respondents" ng-hide="attracted(respondent) || respondent.id == current_respondent.id")
        {{ respondent.name }}
        %button.btn.btn-default.pull-right(ng-click="team_utils.add_to(respondent, attraction_users)" ng-show="attraction_users.length <= max_users - 1")
          %span.glyphicon.glyphicon-chevron-right
        .clearfix
  .col-md-6
    .alert.alert-info(ng-hide="attraction_users.length > 0")= t(:choose_from, scope: [:ui_helpers])
    %ul.list-group
      %li.list-group-item(ng-repeat="user in attraction_users")
        %button.btn.btn-default(ng-click="team_utils.remove_from(user, attraction_users)")
          %span.glyphicon.glyphicon-chevron-left
        %span.label.label-default {{ $index + 1 }}
        &nbsp;
        {{ user.name }}
